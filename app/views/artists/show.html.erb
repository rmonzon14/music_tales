<h1><%= @artist.name %></h1>

<div>
    <h2>Albums</h2>
    <ul>
        <% if @artist.albums.empty? %>
            <p>The are currently no available songs for this artist</p>
        <% else %>
            <% @artist.albums.each do |album| %>
                <li><%= album.name %></li>
            <% end %>
        <% end %>
    </ul>
</div>


